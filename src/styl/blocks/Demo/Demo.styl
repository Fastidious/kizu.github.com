.Demo
  position: relative

  overflow: hidden

  margin-top: 2*$size.base
  box-sizing: border-box

  &_injected
    text-align: left
    overflow: visible

  &-Frame
    display: block

    height: 26em
    padding: 0
    margin: 0
    border: 0

  &-Link
    position: absolute
    right: 0
    bottom: 0
    left: 0
    text-align: center

    text-shadow: none !important

    background: rgba(255,255,255,.5) !important

    border-radius: 4px 4px 0 0
    transition: bottom .2s

  &:not(:hover) &-Link
    bottom: -2em
    transition: bottom .2s 1s
