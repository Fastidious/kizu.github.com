// # Page: `<html>` stuff
//
// 1. Basic reset
// 2. Always show scroll to disable jump.
//    TODO: replace with calc()
// 3. Variable visual stuff
// 4. ?
// 5. ?
// 6. Use kerning and other stuff
// 7. Enforce font-smoothing
// 8. Default cursor as default

.Page
  padding: 0 // [1]
  margin: 0  // [1]
  overflow-y: scroll  // [2]

  text-align: center // [5]

  -webkit-text-size-adjust: 100% // [4]
  -ms-text-size-adjust: 100% // [4]

  text-rendering: optimizelegibility // [6]
  -webkit-font-smoothing: subpixel-antialiased // [7]

  cursor: default // [8]

  // [3]
  font-size: $size.base
  text-shadow: 0 1px $color.white
  color: $color.text
  background: $color.body

  &_post
    background: $color.distant


  &-Header
    position: absolute
    top: 0
    right: 0
    left: 0

    overflow: hidden

    height: $size.header
    // TODO: move those paddings to mixin?
    padding: 0 0.5*$size.base
    padding: 0 2.5vw

    white-space: nowrap

    ^[0]_post &
      position: fixed

    ^[0]_index &
      z-index: 99
      height: $size.header + 1.5*$size.base

  &-Languages
    position: absolute
    top: 2*$size.base
    right: 0.5*$size.base
    right: 2.5vw

    padding: 0 1.5*$size.base
    margin: 0

    text-align: left

    font-size: 1*$size.base
    line-height: 1.5*$size.base

    color: rgba($color.dark, 0.25)

    ^[0]_index &
      top: 3.5*$size.base

    ^[0]:not(.without-sidebar) &
      left: 100%
      right: auto

      width: $size.sidebar - 4*$size.base

      @media (max-width: 820px)
        left: auto
        right: 0

  &-Language
    padding-left: 1.5*$size.base
    margin: 0

    &:before
      margin-left: -1.5*$size.base
      width: 1.5*$size.base

    @media (max-width: 820px)
      overflow: hidden

      width: 0
      padding-left: 0

      text-align: right

      &:before,
      &-Link:before
        content: attr(data-short)

        position: absolute
        right: 0

        text-align: right

        text-shadow: inherit
        background: inherit


  // ## Page-Body: `<body>` stuff
  &-Body
    position: relative
    z-index: $z-index.ground

    min-width: $size.page_min
    padding: $size.header 0 $size.footer
    margin: 0

    font: $size.text/2*$size.base $font.regular

    // Clearfix
    &:before,
    &:after
      content: ""
      display: table
      clear: both


  // ## Page-Content: main layout block
  &-Content
    position: relative
    z-index: $z-index.above

    overflow: hidden

    padding: $size.base 0.5*$size.base 0
    padding: $size.base 2.5vw 0

    background: $color.body

    ^[0]_post &
      padding-top: 2*$size.base
      padding-bottom: 2*$size.base

      box-shadow: inset 0 1px 0 rgba($color.white, 0.9),
                  0 0 0 1px rgba($color.dark, 0.05),
                  0 0 40px -5px rgba($color.dark, 0.3)


  // ## Page-Title: Page's title
  &-Title
    padding-top: 1.5*$size.base
    margin: 0
    font-weight: normal

    text-indent: -0.09em

    ^[0]_index &
      padding-top: 3*$size.base

    @media (max-width: 820px)
      padding-top: 2*$size.base
      font-size: 2.5*$size.base

    &-Link
      &:not(:hover):not(:focus)
        color: $color.distant_text

  &-Footer
    position: absolute
    right: 0
    bottom: 0
    left: 0

    overflow: hidden

    height: $size.footer
    padding: 0 0.5*$size.base
    padding: 0 2.5vw

    & p
      margin-top: 0

    ^[0]_post &
      position: fixed
      background: $color.distant

  &-Copy
    display: flex
    align-items: baseline

    margin-bottom: 0

    text-align: left
    text-indent: 0

    font-size: $size.base
    color: $color.misc

    & > .Link_wrapper:last-child
      margin-left: auto
