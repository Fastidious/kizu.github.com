// # Main: content block
.Main
  cursor: text

  // Aligning stuff properly
  // TODO: Move to mixin/extend
  & > *,
  /.Page-Title,
  /.Page:not(.Page_post) .Page-Copy
    width: $size.content
    max-width: 100%
    margin-left: auto
    margin-right: auto
    text-align: left

  & > h1,
  & > h2,
  & > h3,
  & > h4,
  & > h5,
  & > h6
    text-align: center

    & + p
      margin-top: 0

      text-indent: 0

  & p
    text-align: justify
    text-indent: 2*$size.base

    &:first-of-type
      margin-top: 0

      text-indent: 0

    & > *
      text-indent: 0

  // Better table
  & > table
    display: inline-block

  // ???
  & header h1
    padding-bottom: 2.5*$size.base
