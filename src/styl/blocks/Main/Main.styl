// # Main: content block
.Main
  cursor: text

  // Aligning stuff properly
  // TODO: Move to mixin/extend
  & > *,
  /.Page-Title,
  /.Page:not(.Page_post) .Page-Copy
    width: $size.content
    max-width: 100%
    margin-left: auto
    margin-right: auto

  & p
    text-align: justify

  // Better table
  & > table
    display: inline-block

  // ???
  & header h1
    padding-bottom: 2.5*$size.base
