p,
ul,
ol,
dl,
blockquote,
hr,
code,
pre,
table
  padding: 0
  margin: 2*$size.base 0 0

li,
li > p
  padding: 0
  margin: $size.base 0 0

p
  text-indent: $size.indent

  & > *,
  li > &:first-child
    text-indent: 0

  & + &
    margin-top: 0

h1,
h2,
h3,
h4,
h5,
h6
  box-sizing: border-box
  padding: 0 $size.indent
  margin: 0

  line-height: 1
  font-weight: normal
  word-wrap: break-word

  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

  & > .hanger:first-child
    position: absolute

    width: 1.5em
    margin-left: -1.5em

    text-align: right

h1
  position: relative

  padding-top: 2*$size.base

  text-align: center

  font-size: 3.5*$size.base

h2
  position: relative
  font-size: 2*$size.base
  line-height: 2*$size.base
  padding-top: 3*$size.base
  padding-bottom: 1*$size.base

h3
  font-size: 1.5*$size.base
  line-height: 2*$size.base

  padding-top: 2*$size.base
  padding-bottom: 1*$size.base

h4,
h5,
h6
  font-size: 1*$size.base
  padding-bottom: 1*$size.base

ol
  counter-reset: list

li
  padding-left: 2*$size.indent

  text-align: left
  list-style-type: none // Fixme: screenreaders would die out?

  &:before
    content: "— "

    position: absolute

    width: $size.indent
    margin-left: -1*$size.indent

    text-align: left

  ol > &
    counter-increment: list

    &:before
      content: counter(list) ". "


blockquote
  position: relative
  left: -1px

  padding-left: 1em
  padding-left: 2.5vw
  border-left: 1px solid rgba($color.dark, 0.5)
  box-shadow: inset 1px 0 0 rgba($color.dark, 0.5)
  margin-left: -1em
  margin-left: -2.5vw

  text-align: left

  & p
    text-indent: 0
    margin-top: 2*$size.base

    &:first-child
      margin-top: 0


h1,
h2,
h3,
h4,
h5,
h6,
header
  & + *
    margin-top: 0


// Classes for hanging blocks
.hang-xs
  margin-left: -0.05em

.hang-s
  margin-left: -0.1em

.hang-m
  margin-left: -0.15em

.hang-l
  margin-left: -0.2em

.hang-quote
  margin-left: -0.6em

// Should I just use whole utility-opentype there?
.ss01 { -webkit-font-feature-settings: "ss01"; font-feature-settings: "ss01" }
.ss02 { -webkit-font-feature-settings: "ss02"; font-feature-settings: "ss02" }
.ss03 { -webkit-font-feature-settings: "ss03"; font-feature-settings: "ss03" }
.ss04 { -webkit-font-feature-settings: "ss04"; font-feature-settings: "ss04" }
.ss05 { -webkit-font-feature-settings: "ss05"; font-feature-settings: "ss05" }
.ss06 { -webkit-font-feature-settings: "ss06"; font-feature-settings: "ss06" }
.ss07 { -webkit-font-feature-settings: "ss07"; font-feature-settings: "ss07" }
.ss08 { -webkit-font-feature-settings: "ss08"; font-feature-settings: "ss08" }
.ss09 { -webkit-font-feature-settings: "ss09"; font-feature-settings: "ss09" }
.ss10 { -webkit-font-feature-settings: "ss10"; font-feature-settings: "ss10" }

// FIXME: why won't it work properly with big caps?
abbr
  display: inline-block // So the first-letter would work

  text-transform: uppercase
  font-variant-caps: small-caps
  -ms-font-feature-settings: "smcp" 0

  @supports (font-variant-caps: small-caps) or (-webkit-font-feature-settings: "smcp")
    font-size: 0.956521739em
    text-transform: lowercase

  @supports (font-variant-caps: small-caps) or (font-feature-settings: "smcp")
    font-size: 0.956521739em
    text-transform: lowercase

  @supports not (font-variant-caps: small-caps)
    -webkit-font-feature-settings: "smcp"
    font-feature-settings: "smcp"

  &.starting::first-letter
    text-transform: uppercase

.shy
  font-family: 'Cent-Regular21-HangingHyphen', 'Cent-Regular21', Georgia, serif

  &:after
    content: "\AD"

    @supports (-webkit-appearance: none)
      &
        content: "\AD\2062"
