code,
pre,
kbd
  font-family: Monaco, Consolas, monospace, monospace // FIXME: Do we still need double monospace?
  font-size: $size.codetext
  line-height: 1

pre
  position: relative

  overflow: hidden

  // FIXME: Add ws:pre and scrollbars on small sizes?
  // overflow-x: auto

pre > code
  display: inline-block
  vertical-align: top

  padding: 0 0 0 2*$size.base
  margin-bottom: 0

  // Restoring the nested code
  font-size: 1em
  line-height: 2*$size.base
