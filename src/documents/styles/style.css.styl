// ## Uses and imports
$node_modules_src = '../../../node_modules'
$styl_src = '../../styl'

use($node_modules_src + '/stylobuild')
@import $styl_src + '/css/prism.css'
@import $styl_src + '/font_regular'
@import $styl_src + '/keyframes'


// ## Settings
$size = {}
$size['base'] = 18px           // ex rem
$size['text'] = 23px           // ex body size
$size['smalltext'] = 16px      // ex 0.89*rem
$size['codetext'] =  0.87em    // should be smaller than the main text anywhere
$size['footer'] =    6 * $size.base // ex footer_size
$size['header'] =    6 * $size.base // ex header_size
$size['page_min'] = 22 * $size.base
$size['content'] =  42 * $size.base
$size['sidebar'] =  15 * $size.base

$color = {}
$color['dark'] = #25220E // ex dark
$color['white'] = #FFF
$color['body'] = #FBFAF4 // ex body_bg
$color['text'] = rgba($color.dark, 0.92) // ex body_text
$color['link'] = #0985CE // ex body_link
$color['visited'] = #8C64B4 // ex body_link_visited
$color['distant'] = blend(rgba($color.dark, 0.05), $color.body) // ex distant_bg
$color['highlight'] = rgba(yellow, 0.8)

$font = {}
$font['regular'] = 'Cent-Regular21', Georgia, serif

$z-index = {
  below: -9,
  ground: 1,
  above:  9
}


// ## Debug stuff
@require $styl_src + '/debug'

// ## Generic stuff
@require $styl_src + '/generic/**/*.styl'

// ## Main Blocks
@require $styl_src + '/blocks/**/*.styl'

